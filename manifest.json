{
  "manifest_version": 3,
  "name": "Synapse Shelf",
  "version": "1.0.0",
  "description": "A lightweight research hub for capturing, categorizing, and annotating academic papers",
  "permissions": [
    "tabs",
    "storage",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Synapse Shelf"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
